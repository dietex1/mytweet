<div class="container signn">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Forgot your password?</h1>
      <%= form_with url: password_reset_path do |form| %>
        <div class="form-group mb-3">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
        <div class="form-group">
          <%= form.submit "Reset Password", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>