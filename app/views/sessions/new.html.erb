<div class="container signn">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Log In</h1>
      <%= form_with model: Current.user, url: sign_in_path do |form| %>
        <div class="form-group mb-3">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
        <div class="form-group mb-3">
        <%= link_to "Forgot your password?" , password_reset_path   %>
        </div>
        <div class="form-group">
          <%= form.submit "Sign Up", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>